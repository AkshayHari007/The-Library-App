    <div class="login col-lg-4 formhead mx-auto">

        <h3>Log In to Books.com</h3>
        <br>

        <form action="/login/check" method="get" onsubmit="return validat();">

            <div class="form-floating mb-3 mt-3">
                <input type="text" class="form-control" id="ebox" onkeyup="emailValidate()"
                    placeholder="Enter Your Email Id" name="EmailId" required>
                <label for="LName">Email Id</label>
                <p id="emailMessage"></p>
            </div>

            <div class="form-floating mb-3 mt-3">
                <input type="password" class="form-control" id="pwdbox" onkeyup="pwdValidate()"
                    placeholder="Enter a Password" name="Password" required>
                <label for="LName">Password</label>
                <p id="pwdMessage"></p>
            </div>

