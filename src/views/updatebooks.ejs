    <!-- ! Books Data Start -->
    <div class="bookscol  mx-auto" style="min-height: 83vh;">
        <h1>Add Books</h1>

        <div class="bookupdate mx-auto">

            <form class="row g-3" action="/updatebooks/addbook" method="post" enctype="multipart/form-data">

                <!-- <div class="row g-3"> -->
                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingInputGrid" placeholder="book name"
                            name="BookName" required>
                        <label for="floatingInputGrid">Book Name</label>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingInputGrid" placeholder="Author Name"
                            name="AuthorName" required>
                        <label for="floatingInputGrid">Author Name</label>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="floatingInputGrid" placeholder="Genre" name="Genre"
                            required>
                        <label for="floatingInputGrid">Genre</label>
                    </div>
                </div>

                <!-- </div> -->


                <div class="form-floating">
                    <!-- <input type="text" class="form-control" placeholder="Description" id="floatingTextarea2"
                    style="height: 100px" name="Description"> -->
                    <textarea class="form-control" placeholder="Description" id="floatingTextarea2"
                        style="height: 100px" name="Description" required></textarea>
                    <label for="floatingTextarea2">Description</label>
                </div>


                <div class="mb-3">
                    <!-- <label for="formFile" class="form-label">Default file input example</label> -->
                    <input class="form-control" type="file" id="formFile" name="Image" required>
                </div>


                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Add Book</button>
                </div>
            </form>

        </div>

    </div>


