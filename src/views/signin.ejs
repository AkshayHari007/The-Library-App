    <div class="signup col-lg-5 formhead mx-auto">

        <h3>Create an Account</h3>
        <br>

        <form action="/signin/adduser" method="post" onsubmit="return validat();">
            <div class="form-floating mb-3 mt-3">
                <input type="text" class="form-control" placeholder="Enter Your First Name" name="FirstName" required>
                <label for="FName">First Name</label>
            </div>

            <div class="form-floating mb-3 mt-3">
                <input type="text" class="form-control" placeholder="Enter Your Last Name" name="LastName">
                <label for="LName">Last Name</label>
            </div>

            <div class="form-floating mb-3 mt-3">
                <input type="text" class="form-control" id="ebox" onkeyup="emailValidate()"
                    placeholder="Enter Your Email Id" name="EmailId" required>
                <label for="LName">Email Id</label>
                <p id="emailMessage"></p>
            </div>

            <div class="form-floating mb-3 mt-3">
                <input type="text" class="form-control" id="phbox" onkeyup="phValidate()"
                    placeholder="Enter Your Phone Number" name="PhoneNumber" maxlength="12" required>
                <label for="LName">Phone Number</label>
                <p id="phMessage"></p>
            </div>

            <div class="form-floating mb-3 mt-3">
                <input type="password" class="form-control" id="pwdbox" onkeyup="pwdValidate()"
                    placeholder="Enter a Password" name="Password" required>
                <label for="LName">Password</label>
                <p id="pwdMessage"></p>
            </div>

            <div class="form-floating mb-3 mt-3">
                <input type="password" class="form-control" id="pwdcbox" onkeyup="pwdcValidate()"
                    placeholder="Confirm the Password" name="Confirm the Password" required>
                <label for="LName">Confirm the Password</label>
                <p id="pwdcMessage"></p>
            </div>

